{% extends 'base.html.twig' %}

{% block title %}Eze-checkin | Login
{% endblock %}

{% block body %}


    <div class="container-fluid h-75">
        <div class="row justify-content-center align-items-center h-75">
            <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 col-xl-3">
                <div class="card p-4 shadow">
                    <h3 class="card-title">Ingresar</h3>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form method="POST">
                        <div class="form-group">
                            <label for="email">Correo Electronico</label>
                            <input type="text" class="form-control form-control-lg" id="email" name="email" placeholder="Ingrese su Correo Electronico" value="{{ last_username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input class="form-control form-control-lg" id="password" name="password" type="password">
                        </div>

                        <div class="form-group text-center">
                            <a href="/">Olvido su Contraseña?</a>
                        </div>

                        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
